 "html": "<style>\n    .print-format p {\n            font-family: Liberation Sans, Arial, Helvetica;\n            line-height: 1.2;\n            vertical-align: middle;\n        }\n    .print-format th {\n        text-align: center;\n        background-color: #808080 !important;\n        font-size: 9pt;\n        color: white;\n    }\n    @media print {\n        .body_container {\n            /* 0.75 inch = 19,05 mm; 72 -> 96 dpi = Faktor 0,75 => 14,3 mm  */\n            /* left: -14.3mm; */\n            margin-left: 15mm;\n            margin-right: 10mm;\n            top: 30mm;\n            /*left: 7.5mm;*/\n            position: relative;\n        }\n        .red_bar_right {\n            position:absolute;\n            display:block;\n            width: 7mm;\n            top: 0mm;\n            left: 203mm;\n            height: 282.3mm;\n            background-color: #b71c25;\n            border-radius: 0px 0px 0px 10px;\n        }\n        .red_bar_right_followup {\n            position:absolute;\n            display:block;\n            width: 7mm;\n            left: 203mm;\n            height: 282.3mm;\n            background-color: #b71c25;\n            border-radius: 0px 0px 0px 10px;\n        }\n        .red_label {\n            position: absolute;\n            top: 0mm;\n            width: 152mm;\n            height: 15.873mm;\n            background-color: #b71c25;\n        }\n        .contact_person {\n            position: absolute;\n            left: 146mm;\n            width: 50mm;\n            top: 75mm;\n            line-height: 1.2;\n            /* Text format */\n        }\n        .quotation_data {\n            margin-left: 15mm;\n            position:absolute;\n            top: 87mm;\n        }\n        .item_name {\n            word-break: break-all;\n            font-size: 9pt;\n        }\n        .contact_person p {\n            margin-top: 3mm;\n            margin-bottom: 3mm;\n            font-size: 10pt;\n        }\n        .salutation {\n            margin-left: 15mm;\n            position:absolute;\n            width: 100%;\n            top: 120mm;\n        }\n        .salutation p {\n            margin-bottom: 5mm;\n            font-size: 9pt;\n        }\n        .items {\n            margin-top: 5mm;\n        }\n        .price {\n            text-align: right;\n            white-space: nowrap;\n        }\n        .closing {\n\n            margin-top: 10mm;\n            page-break-inside: avoid;\n        }\n        td {\n            font-size: 14pt;\n            font-size: 9pt;\n        }\n    }\n    .indicator1 {\n        position: absolute;\n        width: 20mm;\n        top: 11mm;\n        left: 30mm;\n    }\n    .indicator2 {\n        position: absolute;\n        width: 50mm;\n    }\n    .indicator3 {\n        top: 35mm;\n        position: relative;\n        width: 30mm;\n    }\n    .indicator5{\n        position: absolute;\n        width: 20mm;\n        top: 35mm;\n        left: 30mm;\n    }\n    .continue {\n        margin-left: 10mm;\n        margin-bottom: 20mm;\n    }\n    .closing p {\n        margin-bottom: 5mm;\n    }\n    .new_page {\n        height: 5mm;\n    }\n    .logo {\n        position: absolute;\n        top: 0mm;\n        left: 158.1mm;\n        width: 36mm;\n        height: 17.1mm;\n    }\n    .closing_text {\n        padding-top: 10mm;\n    }\n    tr.border_tb {\n        border-top: 1pt solid grey;\n        border-bottom: 1pt solid grey;\n    }\n    td.border_tb {\n        border-top: 3pt double grey;\n    }\n    .borderless tr td {\n        padding-top: 0px !important;\n        padding-bottom: 0px !important;\n    }\n</style>\n\n{% set vars = {'total_amount': 0, 'break': 0, 'travel_cost': False, 'effort': 0} %}\n\n\n<div>\n    {% if letter_head and not no_letterhead %}\n        {{ letter_head }}\n    {% endif %}\n</div>\n<div class=\"red_bar_right\"></div>\n<div class=\"contact_person\">\n    <div class=\"indicator2\">\n        <p><b>\n            Kundennummer<br>\n            {{ doc.customer }}\n        </b></p>\n    </div>\n</div>\n<div style=\"position: absolute; left: 125mm;\">\n    <table class=\"borderless\">\n        <tr>\n            <td>\n                Mahnung per:\n            </td>\n            <td>\n                {{doc.get_formatted(\"posting_date\") }}\n            </td>\n        </tr>\n    </table>\n</div>\n<div class=\"body_container clearfix\">\n    <p>\n    {% if doc.body_text %}\n        {{ doc.body_text }}\n    {% endif %}\n    </p>\n    <table style=\"margin-top: 5mm; width: 100%;\">\n        <thead>\n            <tr class=\"border_tb\">\n            <td>Belegdatum</td>\n            <td>Belegnummer</td>\n            <td>f&auml;llig am</td>\n            <td class=\"text-right\">F&auml;llig seit</td>\n            <td class=\"text-right\">Rechnung</td>\n            <td class=\"text-right\">Restbetrag</td>\n            <td>Mahnstufe</td>\n            </tr>\n        </thead>\n        <tbody>\n            {% for dunning in  doc.dunning_item %}\n            <tr>\n                <td>{{ frappe.utils.formatdate(dunning.posting_date, \"dd.MM.YYYY\") }}</td>\n                <td>{{dunning.sales_invoice}}</td>\n                <td>{{ frappe.utils.formatdate(dunning.due_date, \"dd.MM.YYYY\") }}</td>\n                <td class=\"text-right\">{{dunning.overdue_days}} Tage</td>\n                <td class=\"text-right\">{{dunning.get_formatted(\"invoice_total\").replace(doc.currency,'')}}  {{ doc.currency }}</td>\n                <td class=\"text-right\">{{dunning.get_formatted(\"outstanding_amount\").replace(doc.currency,'')}} {{ doc.currency }}</td>\n                <td class=\"text-center\">{{dunning.dunning_stage}}</td>\n            </tr>\n                {% if dunning.page_break %}\n        </tbody>\n    </table>\n</div>\n<div class=\"page-break\"></div>\n<div class=\"red_bar_right_followup\"></div>\n<div class=\"body_container clearfix\">\n    <table style=\"margin-top: 10mm; width: 100%;\">\n        <thead>\n            <tr class=\"border_tb\">\n                <td>Belegdatum</td>\n                <td>Belegnummer</td>\n                <td>f&auml;llig am</td>\n                <td>F&auml;llig seit</td>\n                <td>Rechnung</td>\n                <td>Restbetrag</td>\n                <td>Mahnstufe</td>\n            </tr>\n        </thead>\n        <tbody>\n                {% endif %}\n            {% endfor %}\n            <tr>\n                <td></td>\n                <td colspan=\"3\"></td>\n                <td class=\"border_tb\">Gesamtsumme:</td>\n                <td class=\"text-right border_tb\"><b>{{doc.get_formatted(\"outstanding_amount\").replace(doc.currency,'')}} {{ doc.currency }}</b></td>\n                <td></td>\n            </tr>\n        </tbody>\n    </table>\n    <p class=\"closing_text\">\n        {{ doc.closing_text }}\n    </p>\n    <p class=\"closing_text\">\n        Linux Informations Systems AG<br>\n        <br>\n        Finanzbuchhaltung<br>\n        buchhaltung@linux-ag.de\n    </p>\n</div>\n<div>\n    <div id=\"footer-html\" class=\"visible-pdf\">\n        {% if not no_letterhead and footer %}\n        <div class=\"letter-head-footer\" style=\"margin-top: 30mm; height: 10mm;\">\n            {{ footer }}\n        </div>\n        {% endif %}\n    </div>\n</div>",
