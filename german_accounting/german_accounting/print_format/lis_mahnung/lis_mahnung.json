 "html": "<style>\n\n    @media print {\n        .body_container {\n            /* 0.75 inch = 19,05 mm; 72 -> 96 dpi = Faktor 0,75 => 14,3 mm  */\n            /* left: -14.3mm; */\n            margin-left: 15mm;\n            top: 10mm;\n            left: 7.5mm;\n            width: 172mm;\n            position: relative;\n        }\n        .red_element2 {\n            position:absolute;\n            display:block;\n            width: 7mm;\n            left: 203mm;\n            height: 282.3mm;\n            background-color: #b71c25;\n            border-radius: 0px 0px 0px 10px;\n        }\n        .red_element {\n            position:absolute;\n            display:block;\n            width: 7mm;\n            top: 0mm;\n            left: 203mm;\n            height: 282.3mm;\n            background-color: #b71c25;\n            border-radius: 0px 0px 0px 10px;\n        }\n        .content_table {\n            margin-left: 15mm;\n            top: 60mm;\n            left: 7.5mm;\n            width: 172mm;\n            position: relative; \n        }\n        .summary {\n            margin-top: 20mm;\n        }\n    }\n    \n    .dunning_data {\n        /* display: inline-block; */\n        position: absolute;\n        left: 146mm;\n        width: 50mm;\n        top: 75mm;\n        line-height: 1.2;\n        /* Text format */\n        font-size: 10pt;\n    }\n    .indicator1 {\n        position: absolute;\n        width: 20mm;\n        top: 9mm;\n        left: 30mm;\n    }\n    .indicator2 {\n        position: absolute;\n        width: 30mm;\n    }\n    .indicator3 {\n        top: 35mm;\n        position: relative;\n        width: 30mm;\n    }\n    .indicator5{\n        position: absolute;\n        width: 20mm;\n        top: 35mm;\n        left: 30mm;\n    }\n    .ddata {\n        position: relative;\n        left: 146mm;\n        top: 45mm;\n        margin-bottom: 30mm;\n    }\n    .body_container p {\n        margin-bottom: 1em;\n        margin-top: 1em;\n    }\n    .content_table td {\n        height: 1mm;\n    }\n    .foot1{\n        bottom: -11mm !important;\n    }\n    .foot2{\n        bottom: -11mm !important;\n    }\n    .foot3{\n        bottom: -11mm !important;\n    }    \n    td.border_top {\n        border-top:1pt solid grey;\n    }\n    tr.border_tb {\n        border-top: 1pt solid grey;\n        border-bottom: 1pt solid grey;\n    }\n</style>\n\n<div>\n    {% if letter_head and not no_letterhead %}\n        {{ letter_head }}\n    {% endif %}\n</div>\n<div class=\"dunning_data\">\n    <div class=\"indicator2\">\n        <p><b>\n            Kundennummer<br>\n            {{ doc.customer }}\n        </b></p>\n        <p>\n            Mahnung per:<br>\n            Gebucht bis:<br>\n            Gebucht bis:<br>\n        </p>\n    </div>\n    <div class=\"indicator1\">\n        <p>\n            01.01.1999<br>\n            01.01.1999<br>\n            01.01.1999\n        </p>\n    </div>\n    <div class=\"indicator3\">\n        Betr&auml;ge in\n    </div>\n    <div class=\"indicator5\">\n        Euro\n    </div>\n</div>\n\n\n<div class=\"body_container\">\n    {{ doc.text_body }}\n    <p>\n        mit freundlichen Gr&uuml;&szlig;en\n    </p>\n    <p>\n        {{ doc.company }}<br>\n        Finanzbuchhaltung<br>\n        {{frappe.db.get_value(\"Company\", doc.company, \"email\")}}\n    </p>\n</div>\n<div class=\"page-break\"></div>\n<div class=\"ddata\">\n        <div class=\"indicator2\">\n        <p><b>\n            Kundennummer<br>\n            {{ doc.customer }}\n        </b></p>\n        <p>\n            Mahnung per:<br>\n            Gebucht bis:<br>\n            Gebucht bis:<br>\n        </p>\n    </div>\n    <div class=\"indicator1\">\n        <p>\n            01.01.1999<br>\n            01.01.1999<br>\n            01.01.1999\n        </p>\n    </div>\n    <div class=\"indicator3\">\n        Betr&auml;ge in\n    </div>\n    <div class=\"indicator5\">\n        Euro\n    </div>\n</div>\n<div class=\"content_table\">\n    <div>\n        <table>\n            <tr class=\"border_tb\">\n                <td>Belegdatum</td>\n                <td>Belegnummer</td>\n                <td>f&auml;llig am</td>\n                <td>Zinstage</td>\n                <td>Rechnung</td>\n                <td>Zahlung</td>\n                <td>Restbetrag</td>\n                <td>Verzugszinsen</td>\n                <td>Mahnstufe</td>\n            </tr>\n            {% for dunning in  doc.dunning_items %}\n            <tr>\n                <td>{{ frappe.utils.formatdate(dunning.posting_date, \"dd.MM.YY\") }}</td>\n                <td>{{dunning.sales_invoice}}</td>\n                <td>{{ frappe.utils.formatdate(dunning.due_date, \"dd.MM.YY\") }}</td>\n                <td>{{dunning.overdue_days}}</td>\n                <td class=\"text-right\">{{dunning.get_formatted(\"invoice_total\").replace(doc.currency,'')}}</td>\n                <td></td>\n                <td class=\"text-right\">{{dunning.get_formatted(\"outstanding_amount\").replace(doc.currency,'')}}</td>\n                <td></td>\n                <td class=\"text-right\">{{dunning.dunning_stage}}</td>\n            </tr>\n            {% endfor %}\n            <tr>\n                <td></td>\n                <td></td>\n                <td colspan=\"2\">Gesamtsumme:</td>\n                <td></td>\n                <td></td>\n                <td class=\"text-right border_top\"><b>{{doc.get_formatted(\"outstanding_amount\").replace(doc.currency,'')}}</b></td>\n                <td><b>Euro</b></td>\n                <td></td>\n            </tr>\n        </table>\n    </div>\n    <div class=\"summary\">\n        <table>\n            <tr>\n                <td>F&auml;lligkeitsanalyse:</td>\n                <td>Mahnstufe 1</td>\n                <td>Mahnstufe 2</td>\n                <td>Mahnstufe 3</td>\n            </tr>\n            <tr>\n                <td></td>\n                <td class=\"text-right\">{{doc.get_formatted(\"total_1\").replace(doc.currency,'')}}</td>\n                <td class=\"text-right\">{{doc.get_formatted(\"total_2\").replace(doc.currency,'')}}</td>\n                <td class=\"text-right\">{{doc.get_formatted(\"total_3\").replace(doc.currency,'')}}</td>\n            </tr>\n        </table>\n    </div>\n</div>\n<div>\n    <div id=\"footer-html\" class=\"visible-pdf\">\n        {% if not no_letterhead and footer %}\n        <div class=\"letter-head-footer\" style=\"margin-top: 30mm; height: 10mm;\">\n            {{ footer }}\n        </div>\n        {% endif %}\n    </div>\n</div>",
